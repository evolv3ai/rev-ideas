{
  "agents": {
    "issue_monitor": {
      "enabled": true,
      "min_description_length": 50,
      "required_fields": [
        "description",
        "expected behavior",
        "steps to reproduce"
      ],
      "actionable_labels": [
        "bug",
        "feature",
        "enhancement",
        "fix",
        "improvement"
      ],
      "cutoff_hours": 24,
      "check_interval_minutes": 15
    },
    "pr_review_monitor": {
      "enabled": true,
      "review_bot_names": [
        "gemini-bot",
        "github-actions[bot]",
        "dependabot[bot]"
      ],
      "auto_fix_threshold": {
        "critical_issues": 0,
        "total_issues": 5
      },
      "cutoff_hours": 24,
      "check_interval_minutes": 30
    }
  },
  "claude_cli": {
    "command": "claude-code",
    "timeout_seconds": 600
  },
  "git": {
    "author_name": "AI Agent",
    "author_email": "ai-agent@localhost",
    "branch_prefix": {
      "issue": "fix-issue-",
      "feature": "feature-",
      "review": "review-feedback-"
    }
  },
  "notifications": {
    "enabled": false,
    "webhook_url": ""
  },
  "security": {
    "enabled": true,
    "allow_list": [
      "AndrewAltimit",
      "github-actions[bot]",
      "gemini-bot",
      "ai-agent[bot]"
    ],
    "log_violations": true,
    "reject_message": "This AI agent only processes requests from authorized users to prevent security vulnerabilities. Please contact the repository owner if you believe you should have access.",
    "rate_limit_window_minutes": 60,
    "rate_limit_max_requests": 10,
    "allowed_repositories": [
      "AndrewAltimit/template-repo"
    ]
  }
}
